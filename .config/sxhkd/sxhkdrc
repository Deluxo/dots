 #custom

{_,shift + }Print
	{maim, maim -s}

super + ctrl + {1-9}
	{firefox, urxvt -e vim, qtox, urxvt -e ncmpcpp, ~/.scripts/new-livestreamer.sh, _, _, urxvt -e ranger, urxvt -e htop}

XF86AudioMute
	pactl set-sink-mute 1 toggle

XF86AudioRaiseVolume
	pactl set-sink-volume 1 +2%

XF86AudioLowerVolume
	pactl set-sink-volume 1 -2%

{_,alt + }XF86AudioStop
	{playerctl stop, MPD_PORT=6601 mpc stop}

{_,alt + }XF86AudioPlay
	{playerctl play-pause, MPD_PORT=6601 mpc toggle}

{_,alt + }XF86AudioNext
	{playerctl next, MPD_PORT=6601 mpc next}

{_,alt + }XF86AudioPrev
	{playerctl previous, MPD_PORT=6601 mpc prev}

{_,shift + }Pause
	{systemctl suspend, shutdown now}

super + q
	bspc node -c

super + Return
	urxvt

# program launcher
super + {_,ctrl + ,shift + }space
	rofi -combi-modi "window,run" -show {combi,gotwitch,tasker} -modi "window,combi,drun,run,gotwitch:~/.scripts/dmenu-gotwitch.sh,tasker:~/.scripts/dmenu-task.sh"

alt + space
	rofi -show window

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

super + m
	~/.scripts/./steelseries-raw-settings.sh

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }c
	bspc node -f {next,prev}

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

alt + {_,shift + } Tab
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# resize tiled/floating
#

# expand the tiled space in the given direction
super + alt + {h,j,k,l}
	bspc node {@west -r -100,@south -r +100,@north -r -100,@east -r +100}

# contract the tiled space in the given direction
super + alt + shift + {h,j,k,l}
	bspc node {@east -r -100,@north -r +100,@south -r -100,@west -r +100}

# move a floating window
super + {Left,Down,Up,Right}
	xdo move {-x -20,-y +20,-y -20,-x +20}

#
# pointer focus/move/resize
#

super + shift + x
	xkill -frame

#~button1
#	bspc pointer -g focus

## start move/resize
#super + button{1-3}
	#bspc pointer -g {move,resize_side,resize_corner}

## end move/resize
#super + @button{1-9}
	#bspc pointer -u

button8
	bspc node -c

button9
	~/.scripts/./context-runner.sh

ctrl + super + alt + {1-8}
	xclip -selection clipboard ~/.scripts/macros/{shrug,flip-table,unflip-table, shocked,mvp,lovely,h,fissure}
