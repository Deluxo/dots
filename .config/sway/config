set $mod Mod4
set $left h
set $down j
set $up k
set $right l

set $term kitty

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

output * bg $wallpaper fill
output * adaptive_sync on

bar {
	strip_workspace_numbers yes
	swaybar_command waybar
}

set $thickness 2
set $titlebarThickness 0
set $gap 30

set $unfocused_border #24a8b426
