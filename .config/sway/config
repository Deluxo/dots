set $wallpaper /home/lukas/Pictures/Wallpapers/Pixel/wallhaven-g8e8je.png
set $laptop eDP-1

set $mod Mod4
set $left h
set $down j
set $up k
set $right l

set $term kitty
set $menu dmenu_path | rofi -show run | xargs swaymsg exec --
set $appsmenu dmenu_path | rofi -show drun | xargs swaymsg exec --

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

output * bg $wallpaper fill

bar {
	strip_workspace_numbers yes
	swaybar_command waybar
}

set $thickness 2
set $titlebarThickness 0
set $gap 30

set $unfocused_border #bd93f921
set $focused_border #bd93f966

exec swayidle -w \
	 timeout 120 'swaylock --image $wallpaper' \
	 timeout 150 'swaymsg "output * dpms off"' \
	 resume 'swaymsg "output * dpms on"' \
	 before-sleep 'swaylock --image $wallpaper'

include "./conf.d/*"
