set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $menu dmenu_path | rofi -show run | xargs swaymsg exec --
set $appsmenu dmenu_path | rofi -show drun | xargs swaymsg exec --

set $wallpaper /home/lukas/Pictures/Wallpapers/Minimalistic/wallhaven-839r9y.jpg

output * bg $wallpaper fill

exec swayidle -w \
	timeout 300 "swaylock --image $wallpaper" \
	timeout 600 'swaymsg "output * dpms off"' \
	resume 'swaymsg "output * dpms on"' \
	before-sleep "swaylock --image $wallpaper"

input * repeat_rate 0
input * xkb_layout "us,lt"
input * xkb_variant "dvorak,"
input * xkb_options "grp:rwin_switch"

floating_modifier $mod normal

# KEYS
bindsym $mod+ctrl+1 exec --no-startup-id qutebrowser
bindsym $mod+ctrl+2 exec --no-startup-id $term -e vim
bindsym $mod+ctrl+3 exec --no-startup-id qtox
bindsym $mod+ctrl+4 exec --no-startup-id spotify
bindsym $mod+ctrl+5 exec --no-startup-id steam-native
bindsym $mod+ctrl+8 exec --no-startup-id $term -e ranger
bindsym $mod+ctrl+9 exec --no-startup-id $term -e htop
bindsym $mod+Backspace exec --no-startup-id swaylock --image $wallpaper

bindsym --whole-window button8 kill
bindsym --whole-window button9 exec --no-startup-id ~/.scripts/./context-runner.sh

bindsym $mod+Return exec --no-startup-id $term
bindsym $mod+q kill
bindsym $mod+d exec --no-startup-id $menu
bindsym $mod+shift+d exec --no-startup-id $appsmenu
bindsym $mod+Shift+c reload

bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -10% 
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioMute exec pactl set-sink-volume @DEFAULT_SINK@ toggle

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym $mod+$left focus left
