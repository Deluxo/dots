use-ui-max = false
format-volume-padding = 0
format-muted-padding = 0
format-volume = <ramp-volume> <label-volume>
label-muted =  muted
label-muted-foreground = ${var.color-alt-occupied-muted}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/cal]
type = custom/text
content = 
