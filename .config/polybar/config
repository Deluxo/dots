bar-used-empty = |
bar-used-empty-foreground = #444444

[module/music]
type = custom/script
label = %output%
exec = ~/.config/polybar/scripts/mpris.sh
click-left = playerctl play-pause
scroll-up = playerctl previous
scroll-down = playerctl next

[module/locker]
type = custom/script
label = %output:0:45:...%
exec = ~/.config/polybar/scripts/i3lock.sh
