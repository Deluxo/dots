defaults.ctl.card 1
defaults.pcm.card 1
defaults.pcm.device 0
defaults.pcm.subdevice -1

ctl.equal {
	type equal;
}

pcm.microphone {
	type hw;
	card 2;
	device 0;
	subdevice 0;
}

pcm.equalizer {
	type equal;
	slave.pcm "plug:dmix";
}

pcm.dmixer {
	type dmix;
	ipc_key 2048;
	slave {
		pcm "hw:1,0";
		buffer_size 16384;
	}
}

pcm.!default {
	type asym;
	playback.pcm {
		type plug;
		slave.pcm "equalizer";
	}
	capture.pcm {
		type plug;
		slave.pcm "microphone";
	}
}
