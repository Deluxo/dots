pcm.softvol {
	type softvol;
	slave.pcm "multidevice"
	control.name "Master";
	control.card "Generic";
}

ctl.equal {
	type equal;
}

pcm.equalizer {
	type equal;
	slave.pcm "plug:generic";
}

pcm.multidevice {
	type route;
	slave.pcm {
		type multi;
		slaves.genericSlave {
			pcm "plug:equalizer"
			channels 2;
		}
		slaves.displayportSlave {
			pcm "displayport"
			channels 2;
		}
		slaves.atihdmiSlave {
			pcm "atihdmi"
			channels 2;
		}
		bindings {
			0 {
				slave genericSlave;
				channel 0;
			}
			1 {
				slave genericSlave;
				channel 1;
			}
			2 {
				slave displayportSlave;
				channel 0;
			}
			3 {
				slave displayportSlave;
				channel 1;
			}
			4 {
				slave atihdmiSlave;
				channel 0;
			}
			5 {
				slave atihdmiSlave;
				channel 1;
			}
		}
	}

	# channel 0 goes to bindings 0, 2, 4 at volume 1.0
	ttable.0.0 1;
	ttable.0.2 1;
	ttable.0.4 1;

	# channel 1 goes to bindings 1, 3, 5 at volume 1.0
	ttable.1.1 1;
	ttable.1.3 1;
	ttable.1.5 1;
}

pcm.!default {
	type asym;
	playback.pcm {
		type plug;
		slave.pcm "softvol";
	}
	capture.pcm {
		type plug;
		slave.pcm "dsnooped";
	}
}
