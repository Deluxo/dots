pcm.atihdmi {
	type dmix;
	ipc_key 6144;
	slave.pcm "hw:1,11";
}

pcm.displayport {
	type dmix;
	ipc_key 2048;
	slave.pcm "hw:1,10";
}

pcm.generic {
	type dmix;
	ipc_key 4096;
	ipc_perm 0666;
	slave.pcm "hw:0,0";
}

